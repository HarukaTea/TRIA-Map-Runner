{
    "robloxLsp.workspace.ignoreDir": [
        ".vscode",
        "**/_Index/**",
    ],
    "robloxLsp.diagnostics.disable": [
        "undefined-type",
        "redefined-type"
    ],

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "sourcemap.json": true,

        "src/RbxCharacterSounds.client.luau": true,
        "src/Runtime.luau": true,
        "src/shared/Library/Runtime.luau": true
    },
    "stylua.targetReleaseVersion": "latest",
    "robloxLsp.diagnostics.globals": [
        "Path2DControlPoint"
    ],
}
